      <Button fx:id="btnIniciar" layoutX="122.0" layoutY="506.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="38.0" prefWidth="189.0" text="Iniciar Sesion" />
      <Button fx:id="btnRegistrar" layoutX="122.0" layoutY="552.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="98.0" prefWidth="189.0" text="Registrar Usuario" />
